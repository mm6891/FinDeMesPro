<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlInforme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >
    <LinearLayout
        android:id="@+id/lyLinearInforme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_movement"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvPeriodoInforme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size"
            />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/lyLinearInforme2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lyLinearInforme">
        <TextView
            android:id="@+id/tvIngresosInforme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Ingresos"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"/>
        <ImageView
            android:src="@drawable/plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvIngresosInformeValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyLinearInforme3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lyLinearInforme2">
        <TextView
            android:id="@+id/tvGastosInforme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Gastos"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"/>
        <ImageView
            android:src="@drawable/minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvGastosInformeValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyLinearInforme4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lyLinearInforme3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"/>
        <ImageView
            android:src="@drawable/equal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tvTotalInformeValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:textSize="@dimen/text_size"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
