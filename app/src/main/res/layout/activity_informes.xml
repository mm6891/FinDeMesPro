<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    tools:context=".InformesActivity">
    <LinearLayout
        android:id="@+id/lyBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:orientation="horizontal">
        <ImageButton android:id="@+id/btnBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="@android:color/white"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tvInformesTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/MENU_INFORMES"
            android:textSize="@dimen/text_size_title"
            android:layout_marginLeft="@dimen/margin"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyLinearFiltroMov0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lyBackButton">
        <Spinner android:id="@+id/spTipoMovimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Spinner android:id="@+id/spPeriodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyLinearFiltroMov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lyLinearFiltroMov0">
        <Spinner android:id="@+id/spPeriodoFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listViewMovInforme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lyLinearFiltroMov"
        android:layout_weight="1"
        android:layout_above="@+id/glResumenInformes" />
    <ImageButton
        android:id="@+id/btnGraficar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/ic_report"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/listViewMovInforme"
        />
    <ImageButton
        android:id="@+id/btnExportarPDF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_math"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"
        android:layout_alignTop="@+id/btnGraficar"
        android:layout_toRightOf="@+id/btnGraficar"
        android:layout_toEndOf="@+id/btnGraficar" />
    <GridLayout
        android:id="@+id/glResumenInformes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="@dimen/margin"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"
            android:layout_row="0"
            android:layout_column="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/margin"
            />
        <TextView
            android:id="@+id/tvIngresosInformesValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/minus"
            android:layout_row="1"
            android:layout_column="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/margin"
            />
        <TextView
            android:id="@+id/tvGastosInformesValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/equal"
            android:layout_row="2"
            android:layout_column="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_row="2"
            android:layout_column="1"
            />
        <TextView
            android:id="@+id/tvSaldoInformesValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin"
            />
    </GridLayout>
</RelativeLayout>
